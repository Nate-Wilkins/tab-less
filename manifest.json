{
  "manifest_version": 2,

  "name": "Tab-less",
  "description": "Disables tabs for tab-less browsing.",
  "version": "0.3.1",

  "background": {
    "scripts": ["detach_new_tabs.js", "override_commands.js", "close_windows_browser_action.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Close Other Windows",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },

  "commands": {
    "new-tab-override": {
      "suggested_key": {
        "default": "Ctrl+T"
      },
      "description": "Overrides the default new tab key combination to open a new window instead"
    }
  },

  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
